@model RGBViagens.Models.ComprarDestinos

@{
    ViewData["Title"] = "Deletar";
}

<div class="form-Deletar">
    <h3>Tem certeza que quer deletar?</h3>
    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Origem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Origem)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Destinos)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Destinos.ID_Destinos)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Volta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Volta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.N_Passageiros)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.N_Passageiros)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Classe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Classe)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="MeusDestinos" asp-controller="Home">Voltar</a>
        </form>
    </div>

</div>
