@model IEnumerable<RGBViagens.Models.ComprarDestinos>
@{
    ViewData["Title"] = "MEUS DESTINOS.";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-black" id="menu">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img class="logo" src="/img/RBG NOVO2.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link home" id="home" asp-action="Index" asp-controller="Home">HOME.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link destinos" id="destinos" asp-action="Create" asp-controller="ComprarDestinos">DESTINOS.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link promocoes" id="promocoes" asp-action="Promocoes" asp-controller="Home">PROMOÇÕES.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link contatos" id="contatos" asp-action="Create" asp-controller="Contatoes">CONTATO.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link meusDestinos" id="meusDestinos" asp-action="MeusDestinos" asp-controller="Home">MEUS DESTINOS.</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main>
    <div class="mDestinos">
        <div class="carrinho">
            <h4>COMPRAS.</h4>
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">ORIGEM</th>
                            <th scope="col">DESTINO</th>
                            <th scope="col">IDA</th>
                            <th scope="col">VOLTA</th>
                            <th scope="col">Nº DE PASSAGEIROS</th>
                            <th scope="col">CLASSE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.ID</th>
                                <td>@item.Origem</td>
                                <td>@item.ID_Destinos</td>
                                <td>@item.Ida</td>
                                <td>@item.Volta</td>
                                <td>@item.N_Passageiros</td>
                                <td>@item.Classe</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="ComprarDestinos" asp-route-id="@item.ID">Edit</a> /
                                    <a asp-action="Delete" asp-controller="ComprarDestinos" asp-route-id="@item.ID">Delete</a>
                                    
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
