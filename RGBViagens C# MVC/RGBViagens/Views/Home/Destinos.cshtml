@model RGBViagens.Models.ComprarDestinos

@{
    ViewData["Title"] = "DESTINOS.";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-black" id="menu">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img class="logo" src="/img/RBG NOVO2.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link home" id="home" asp-action="Index" asp-controller="Home" >HOME.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link destinos" id="destinos" asp-action="Create" asp-controller="ComprarDestinos">DESTINOS.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link promocoes" id="promocoes" asp-action="Promocoes" asp-controller="Home">PROMOÇÕES.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link contatos" id="contatos" asp-action="Create" asp-controller="Contatoes">CONTATO.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link meusDestinos" id="meusDestinos" asp-action="MeusDestinos" asp-controller="Home">MEUS DESTINOS.</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


<main>
    <div class="form-cadastroD">
        <form class="row g-5" asp-action="ComprarDestinos" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Origem" class="control-label">ORIGEM.</label>
                <input asp-for="Origem" class="form-control" />
                <span asp-validation-for="Origem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Destinos" class="control-label">DESTINO.</label>
                <select asp-for="ID_Destinos" class="form-control" asp-items="ViewBag.ID_Destinos">
                    <option value="fer">FERNANDO DE NORONHA.</option>
                    <option value="mar">MARAGOGI.</option>
                    <option value="nat">NATAL.</option>
                    <option value="poa">PORTO ALEGRE.</option>
                    <option value="rec">RECIFE.</option>
                    <option value="rj">RIO DE JANEIRO.</option>
                    <option value="sal">SALVADOR.</option>
                    <option value="sl">SÃO LUÍS.</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Ida" class="control-label">IDA.</label>
                <input asp-for="Ida" class="form-control" />
                <span asp-validation-for="Ida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volta" class="control-label">VOLTA.</label>
                <input asp-for="Volta" class="form-control" />
                <span asp-validation-for="Volta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="N_Passageiros" class="control-label">Nº DE PASSAGEIROS.</label>
                <input asp-for="N_Passageiros" class="form-control" />
                <span asp-validation-for="N_Passageiros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classe" class="control-label">CLASSE.</label>
                <select id="inputClasse" class="form-select" asp-for="Classe">
                    <option value=""></option>
                    <option value="cec">CLASSE ECONOMICA.</option>
                    <option value="pc">PRIMEIRA CLASSE.</option>
                    <option value="cex">CLASSE EXECUTIVA.</option>
                </select>
                <span asp-validation-for="Classe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-outline-danger btpesquisar" onclick="adicionar">ADICIONAR AO CARRINHO.</button>
            </div>
        </form>
    </div>

</main>
