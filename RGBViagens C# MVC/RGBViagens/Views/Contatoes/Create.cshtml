@model RGBViagens.Models.Contato
@{
    ViewData["Title"] = "CONTATO.";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-black" id="menu">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img class="logo" src="/img/RBG NOVO2.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link home" id="home" asp-action="Index" asp-controller="Home">HOME.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link destinos" id="destinos" asp-action="Create" asp-controller="ComprarDestinos">DESTINOS.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link promocoes" id="promocoes" asp-action="Promocoes" asp-controller="Home">PROMOÇÕES.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link contatos" id="contatos" asp-action="Create" asp-controller="Contatoes">CONTATO.</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link meusDestinos" id="meusDestinos" asp-action="MeusDestinos" asp-controller="Home">MEUS DESTINOS.</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="row">
        <div class="col-md-4 mcontatos">
            <h3>CONTATO.</h3>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NomeCompleto" class="control-label">NOME COMPLETO.</label>
                    <input asp-for="NomeCompleto" class="form-control" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">EMAIL.</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mensagem" class="control-label">MENSAGEM.</label>
                    <textarea asp-for="Mensagem" class="form-control"></textarea>
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-lg btn-outline-primary mt-2" id="btnEnviarContato" />
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
